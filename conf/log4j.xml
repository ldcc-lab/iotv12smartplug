	<category name="comus">
		<priority value="debug"/>
		<appender-ref ref="PROXY_LOG_FILE" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="STDERR" />
	</category>
	<!-- ================================================================== -->

</log4j:configuration>